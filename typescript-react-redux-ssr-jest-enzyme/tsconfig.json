{
    "compilerOptions": {
        "outDir": "./public/build",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "rootDir": "src",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "./src/components/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./server/**/*"
    ]
}